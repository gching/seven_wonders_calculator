<div id=playerform>
<%= form_for @player do |f| %>
  <% if @player.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :game_id, "Game ID"%><br />
  <%= f.text_field :game_id %><br />
  <%= f.label :name %><br />
  <%= f.text_area :name %><br />
  <% %w[victories coins wonders blues yellows purples tablets compasses gears leaders blacks].each do |attr| %>
    <%= f.label attr.to_sym %><br />
    <%= f.number_field attr.to_sym %><br />
  <% end %>

  <%= f.button "Submit", :class => "button" %>
<% end %>
</div>
